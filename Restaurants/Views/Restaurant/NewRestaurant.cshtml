@using Restaurants.Models;
@{
  Layout = "_Layout";
}

<div class="container">
    <p>Add Restaurant, Cuisines will be in Dropdown.</p>
    <form action = "/restaurants/newrestaurant" method="post">
            <label for='restaurantName'>Restaurant Name</label>
            <input id='restaurantName' name='restaurantName' type='text' required><br>
            <label for='restaurantLocation'>Restaurant Location</label>
            <input id='restaurantLocation' name='restaurantLocation' type='text' required><br>
            <select name="restaurantCuisine">
            @if (@Model.Count != 0)
            {
                @foreach(CuisineClass cuisine in @Model)
                {
                    <option name="restaurantCuisine" value=@cuisine.GetId()>@cuisine.GetName()</option>
                }
            }
            else
            {
                <option>No Cuisines in Database</option>
            }
            </select>
            <button type='submit'>Add Restaurant To Database</button>
    </form>
    <br>
    <a href="/restaurants">Home</a>
</div>
